<resources>
    <color name="primaryColor">#673ab7</color>
    <color name="primaryColorDark">#512da8</color>
    <color name="primaryFallback">#d1c4e9</color>
    <color name="accentColorFallback">#e7e9fd</color>
    <color name="accentColor">#009688</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorControlHighlight">@color/primaryFallback</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:actionBarTheme">@style/CustomActionBarTheme</item>
        <item name="android:textAppearanceLargePopupMenu">@style/SmallPopupTextStyle</item>
    </style>

    <style name="SmallPopupTextStyle" parent="android:TextAppearance.Small">
        <item name="android:textColor">#8a000000</item>
    </style>

    <style name="CustomActionBarStyle" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:displayOptions">showHome</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="android:textColorPrimary">#deffffff</item>
    </style>
</resources>
